<TextView
	android:id="@+id/instructions"    
    android:layout_width="fill_parent"
    android:layout_marginTop ="5dp"
    android:layout_marginLeft="5sp"
    android:layout_height="wrap_content"
    android:text="Invite friends in two ways: 
\n1) Fill out the email-invite form below or 
\n2) Just give them the invite code."
    />         


<TextView
	android:id="@+id/invite_code_snippet"    
    android:layout_width="fill_parent"
    android:layout_marginTop ="5dp"
    android:textColor="@color/light_best_blue"
    android:layout_marginLeft="5sp"
    android:layout_height="wrap_content"
    android:text="Generating invite code..."
    /> 

