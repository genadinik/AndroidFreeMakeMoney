<View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:layout_marginTop ="10dp"
    android:background="@color/dark_stail_gray"/>

<TextView
	android:id="@+id/form_heading"    
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Invite Friends Form: "
    android:layout_marginLeft="5sp"
    android:layout_marginRight="5sp"
    />        

 	
		 
<TextView
	android:id="@+id/your_name_ask"    
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Your name: "
        android:layout_marginLeft="5sp"
    android:layout_marginRight="5sp"
    />	
	    
<EditText
	android:id="@+id/your_name"    
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
    android:layout_marginRight="5sp"
    android:text=""
    />   	
		
		
		
<TextView
	android:id="@+id/friend_name_ask"    
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Friend's name: "
    android:layout_marginLeft="5sp"
    android:layout_marginRight="5sp"
    />	
	    
<EditText
	android:id="@+id/friend_name"    
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
    android:layout_marginRight="5sp"
    android:text=""
    />   
	


<TextView
	android:id="@+id/friend_email_ask"    
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
    android:layout_marginRight="5sp"
    android:text="Friend's email:"
    />	
	    
<EditText
	android:id="@+id/friend_email"    
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
    android:layout_marginRight="5sp"
    android:text=""
    />   		 
